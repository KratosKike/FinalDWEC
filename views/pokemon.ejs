<%- include("template/cabecera") %>

    <div class="container">
        <a class="btn btn-success btn-block my-4" href="/pokemon/crear">Crear nuevo Pokemon</a>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>


                <!--Si existen elementos en el array de Pokemon-->
                <% if (arrayPokemon.length > 0) { %>
                    
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayPokemon.forEach(pokemon => { %>
                      <!--Aquí podremos mostrar todos los pokemon en una tabla-->

                      <tr>
                        <th scope="row"><%= pokemon.id %></th>
                  <td><%= pokemon.nombre %></td>
                  <td><%= pokemon.tipo %></td>
                  <td><%= pokemon.descripcion %></td>
                  <td>Aciones</td>
                    </tr>
                      
                    <% }) %>
                   <% } %>

                </tbody>
            </table>
           
    </div>

    </body>
</html>
